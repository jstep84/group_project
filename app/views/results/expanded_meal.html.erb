

<div class="container">
  <h1><strong><%= @place["title"] %></strong></h1>
  <h3><%= @place["service"] %></h3>
  
  <h3><%= @place["address"] %></h3>
  <h3><%= @place["phone"] %></h3>
  <h3><%= @place["hours"] %></h3>
  
  <h3><%= @place["description"] %></h3>
</div>

<h3>Comments</h3>
<ul class="comments">
<% if @comments %>
  <% @comments.each do |comment| %>
    <div class="well well-sm">
      <h4><%= comment.content %></h4>
    </div>
  <% end %>
<% end %>
</ul>

<% if @current_user %>
	<%= bootstrap_form_for :comment do |f| %>
    		
      			<%= f.label 'Add a comment' %>
      			<%= f.text_field :content, label: "comment", hide_label: true, placeholder: "Type a comment here" %>
    			<%= f.hidden_field :place_title, :value => @place.title %>
    			<%= f.primary "Add comment" %>
  	
  	<% end %>
  	<% else %>
  	<h3> Sign in to post comments </h3>
<% end %>
